{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "outputDirectory": ".next",
  "crons": [
    {
      "path": "/api/cron/send-reminders",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/birthday-emails",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/send-review-requests",
      "schedule": "0 18 * * *"
    }
  ]
}